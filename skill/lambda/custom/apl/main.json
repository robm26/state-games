{
  "type": "APL",
  "version": "1.0",
  "theme": "light",
  "import": [
    {
      "name": "alexa-layouts",
      "version": "1.0.0"
    },
    {
      "name": "alexa-styles",
      "version" : "1.0.0"
    },
    {
      "name": "alexa-viewport-profiles",
      "version": "1.0.0"
    }
  ],
  "resources": [
    {
      "colors": {
        "myBlue": "#0022f3",
        "myDarkBlue": "#0012e3",
        "myBrightBlue": "#1e90ff",
        "myPanelGrey": "#eeeeee",
        "myPanelGrey2": "#e0e0e0"
      }
    }
  ],
  "styles": {
    "textBlockStyle": {
      "values": [
        {
          "fontSize": 24,
          "color": "@myBlue"
        }]
    },
    "mainFrameStyle": {
      "values": [
        {
          "backgroundColor": "whitesmoke"
        }
      ]
    },
    "titleBannerText": {
      "values": [
        {
          "fontSize": 44,
          "color": "@myBlue"
        }]
    },

    "statsTitle1": {
      "values": [
        {
          "fontSize": 24,
          "color": "@myDarkBlue",
          "": ""
        }]
    },
    "statsTitle2": {
      "values": [
        {
          "fontSize": 24,
          "color": "@myDarkBlue"
        }]
    },
    "statsText1": {
      "values": [
        {
          "fontSize": 24,
          "color": "@myBrightBlue"
        }]
    },
    "statsText2": {
      "values": [
        {
          "fontSize": 24,
          "color": "@myBrightBlue"
        }]
    },
    "statsMainContainer": {
      "values": [
        {}
      ]
    },
    "statsSubContainer": {
      "values": [
        {}
      ]
    },
    "StatsFrame": {
      "values": [
        {
          "align": "center",
          "backgroundColor": "@myPanelGrey",
          "width": "420dp",

          "borderColor": "gainsboro",
          "borderRadius": 5,
          "borderWidth": 1,
          "paddingLeft":   "20dp",
          "paddingRight":  "10dp",
          "paddingTop":    "10dp",
          "paddingBottom": "10dp"

        }
      ]
    },
    "StatsFrame1": {
      "values": [
        {
          "align": "center",
          "backgroundColor": "@myPanelGrey2",
          "borderColor": "gainsboro",
          "borderRadius": 15,
          "borderWidth": 2,
          "paddingLeft":   "20dp",
          "paddingRight":  "10dp",
          "paddingTop":    "10dp",
          "paddingBottom": "20dp",
          "fontColor": "red",
          "fontSize": 24

        }
      ]
    },
    "StatsFrame2": {
      "values": [
        {
          "align": "center",
          "backgroundColor": "@myPanelGrey2",
          "borderColor": "gainsboro",
          "borderRadius": 15,
          "borderWidth": 2,
          "paddingLeft":   "20dp",
          "paddingRight":  "10dp",
          "paddingTop":    "20dp",
          "paddingBottom": "10dp"

        }
      ]
    }
  },
  "layouts": {
  },
  "mainTemplate": {
    "parameters": [
      "payload"
    ],
    "type": "Container",
    "direction": "column",
    "style": "statsMainContainer",
    "items": [

      {
        "type": "Frame",
        "width": "100vw",

        "paddingLeft": "5dp",
        "paddingRight": "5dp",
        "paddingTop": "5dp",
        "paddingBottom": "5dp",
        "style": "mainFrameStyle",

        "item": {
          "when": "${@viewportProfile == @hubLandscapeMedium || @viewportProfile == @hubLandscapeLarge || @viewportProfile == @tvLandscapeXLarge}",
          "type": "Container",
          "direction": "column",
          "width": "99vw",
          "height": "99vh",
          "alignItems": "center",
          "items": [
            {
              "type": "Text",
              "style": "titleBannerText",
              "text": "${payload.liveData.title}"
            },
            {
              "type": "Container",
              "direction": "row",
              "width": "99vw",

              "alignItems": "left",
              "style": "statsSubContainer",
              "items": [

                {
                  "type": "Image",
                  "source": "${payload.liveData.img}",
                  "scale": "fill",
                  "width": 720,
                  "height": 480,
                  "align": "left",
                  "paddingLeft": "5dp",
                  "paddingRight": "10dp"
                },

                {
                  "type": "Frame",
                  "style": "StatsFrame",
                  "item": {
                    "type": "Container",
                    "direction": "column",
                    "scale": "fill",
                    "grow": 1,
                    "items": [

                      {
                        "type": "Frame",
                        "style": "StatsFrame1",
                        "item": {
                          "type": "Container",
                          "direction": "column",
                          "scale": "fill",
                          "grow": 1,
                          "firstItem": [{
                            "type": "Text",
                            "text": "${payload.liveData.statsTitle1}",
                            "style": "statsTitle1"
                          }],
                          "items": ["${payload.liveData.statsArray1}"]
                        }
                      },

                      {
                        "type": "Frame",
                        "style": "StatsFrame2",
                        "item": {
                          "type": "Container",
                          "direction": "column",
                          "scale": "fill",
                          "grow": 1,
                          "firstItem": [{
                            "type": "Text",
                            "text": "${payload.liveData.statsTitle2}",
                            "style": "statsTitle2"
                          }],
                          "items": ["${payload.liveData.statsArray2}"]
                        }
                      }

                    ]
                  }
                }

              ]
            }
          ]
        }
      }
    ]
  }

}